         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Button>
   </HBox>
   <Pane fx:id="zoomBoxContainer" prefHeight="200.0" prefWidth="200.0">
            <ImageView fx:id="zoomBoxView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
   </Pane>
</StackPane>
